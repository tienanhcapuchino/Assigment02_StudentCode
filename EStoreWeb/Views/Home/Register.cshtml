
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model BussinessObject.Models.UserRegisterModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5">
                <div class="card-header">
                    <h4>Register</h4>
                </div>
                <div class="card-body">
                    <form asp-controller="Home" asp-action="DoRegister">
                        <div class="form-group">
                            <label for="username">Email</label>
                            <input asp-for="Email" type="email" class="form-control" id="username" placeholder="Enter email">
                        </div>
                        <div class="form-group">
                            <label for="password">Username</label>
                            <input type="text" asp-for="Username" class="form-control" id="password" placeholder="Enter username">
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Enter password">
                        </div>
                        <div class="form-group">
                            <label for="password">Re-Password</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" id="password" placeholder="Enter re-password">
                        </div>
                        <br />
                        <button type="submit" class="btn btn-primary">Register</button>
                        @{
                            if (ViewBag.RegisterFailed != null)
                            {
                                <span class="text-danger">@ViewBag.RegisterFailed</span>
                            }
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>