@using BussinessObject.Entities;
@model BussinessObject.Models.ProductAddModel
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers

<form class="form-control" asp-controller="Product" asp-action="OnAdd">
    <input asp-for="Name" required class="form-control" type="text" placeholder="enter product name" />
    <br />
    <input asp-for="UnitInStock" required class="form-control" type="number" placeholder="enter unit in stock" />
    <br />
    <select asp-for="CategoryId" class="form-control">
        @{
            //foreach(var item in Model)
            //{
            //    <option value="@item.CategoryId">@item.CategoryName</option>
            //}
        }
    </select>
    <input asp-for="UnitPrice" required type="number" step="any" placeholder="enter unit price" class="form-control">
    <input asp-for="Weight" required type="number" step="any" placeholder="enter weight" class="form-control">
    <input class="btn btn-primary" type="submit" value="Add" />
</form>